<div class="contanier">
  <div class="col-sm-6 col col-sm-offset-3">
    <!-- <select multiple id="e1" class: 'col-sm-12' style="width: 400px;">
      <option value="AL">Alabama</option>
      <option value="WY">Wyoming</option>
    </select> -->
    <select multiple type="hidden" id="ajax-example" style="width: 400px;">
    </select>
    <!-- <%= select_tag :items, options_from_collection_for_select(@users, "id", "name"), multiple: true, class: 'select-example col-sm-12' %> -->
    <h3>Your shopping cart</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td class="col-sm-5"><%= item.product.name %></td>
            <td class="col-sm-5"><%= item.product.price %> $</td>
            <td class="col-sm-2">
              <%= link_to 'Remove', cart_item_path(item), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-sm-3 col-sm-offset-9">
      <%= link_to 'Checkout', '#', class: 'btn btn-success pull-right' %>
    </div>
  </div>
</div>
