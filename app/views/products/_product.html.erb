<%# frozen_string_literal: true %>
<div class="col-sm-4 product">
  <div class="thumbnail" >
    <%= link_to '#' do %>
        <%= image_tag product.image.url(:medium), class: 'product-thumbnail' %>
        <div class="row product-header">
          <div class="col-sm-8">
            <h3><%= product.name %></h3>
          </div>
          <div class="col-sm-4 price">
            <h3>
              <label class="pull-right">$<%= product.price %></label>
            </h3>
          </div>
        </div>
    <% end %>
      <div class="description">
        <%= truncate product.description, length: 180 %>
      </div>
      <%= link_to cart_items_path(product_id: product.id), method: :post, class: 'btn btn-success btn-add-to-cart' do %>
        <span class="fa fa-shopping-cart"></span> Add to Cart
      <% end %>
  </div>
</div>
