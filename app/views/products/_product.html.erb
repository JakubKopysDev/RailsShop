<%# frozen_string_literal: true %>
<div class="col-sm-4 product">
  <div class="thumbnail" >
    <%= link_to product_path(product) do %>
        <%= image_tag product.image.url(:medium), class: 'product-thumbnail' %>
        <div class="row product-header">
          <div class="col-sm-9 name-container">
            <h3 class="product-name"><%= product.name %></h3>
          </div>
          <div class="col-sm-3 price">
            <h3>
              <label class="">$<%= product.price %></label>
            </h3>
          </div>
        </div>
      <% end %>
      <div class="description">
        <%= truncate product.description, length: 180 %>
      </div>
      <div class="categories-links">
        <% product.categories.each do |category| %>
          <%= link_to category.name, '#', class: 'small-link' %>
        <% end %>
      </div>
      <%= link_to cart_items_path(product_id: product.id), method: :post, class: 'btn btn-info btn-add-to-cart' do %>
        <span class="fa fa-shopping-cart"></span> Add to Cart
      <% end %>
  </div>
</div>
